{
    "name": "l10n-demo-calendar",
    "private": true,
    "version": "0.0.1",
    "description": "Demo for the @lxg/l10n library, showing a multilingual calendar as a web component.",
    "scripts": {
        "dev": "npm-run-all --parallel dev:*",
        "dev:js": "npx rollup -c -w",
        "dev:html": "npx browser-sync start --watch --server --port 8081 --files 'dist/*' --index src/index.html"
    },
    "dependencies": {
        "@lxg/l10n": "^2.1.0",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^13.0.0",
        "@rollup/plugin-replace": "^2.3.4",
        "npm-run-all": "^4.1.5",
        "rollup": "^2.26.5",
        "rollup-plugin-string": "^3.0.0",
        "rollup-plugin-terser": "^7.0.0"
    },
    "devDependencies": {
        "browser-sync": "^2.26.13"
    },
    "l10n": {
        "directory": "l10n",
        "instance": "this._l10n",
        "locales": [
            "de-DE"
        ],
        "sources": [
            "src/**/*.js"
        ],
        "targets": {
            "src/translations.json": [
                "src/**/*.js",
                "l10n:date:firstday",
                "l10n:date:daysShort",
                "l10n:date:days",
                "l10n:date:monthsShort",
                "l10n:date:months"
            ]
        }
    }
}
